
<div class="container">
  <%= form_with url: cars_path, method: :get, class: "d-flex my-4" do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a car by state, make or model"
  %>
    <%= submit_tag "Find", class: "btn btn-primary" %>
  <% end %>
<div class="row">
  <div class="col-12 col-lg-4">
    <div class="cards-index">
      <% @cars.each do |car| %>
        <%= link_to(car_path(car.id)) do %>
                  <div class="card-place m-2 my-4">
          <%=  cl_image_tag car.photo.key %>
          <div class="card-place-infos p-3">
            <div>
              <h2 class="mb-2"><%= car.title %></h2>
              <p><%= "#{car.car_type} - #{car.fuel_type} - #{car.transmission}" %></p>
              <p><%= car.address %></p>
            </div>
            <h2 class="card-place-pricing"><%= "$#{car.price_per_day}/day" %></h2>
        </div>
      </div>

        <% end %>
      <% end %>

    </div>
  </div>

  <div class="col-12 col-lg-8 my-4">
<div style="width: 100%; height: 500px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

</div>
</div>
