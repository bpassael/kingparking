<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.imgur.com/3Mr6U2q.png);">
  <div class="container">
    <h1>Rent a car with KINGPARKING !</h1>
    <p>Find a rental car near you, anywhere in the US</p>
    <%= link_to "Find a car", cars_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container my-5">
  <div class="row">
  <h3 class="text-center my-2" id="home-title">Latest cars</h3>
      <% @cars.sample(12).each do |car| %>
      <div class="p-4 col-12 col-lg-4">
      <div class="cards-home">
      <%= link_to(car_path(car.id)) do %>
        <div class="card-place m-2">
          <%=  cl_image_tag car.photo.key %>
          <div class="card-place-infos p-3">
            <div>
              <h2 class="mb-2"><%= car.title %></h2>
              <p><%= "#{car.car_type} - #{car.fuel_type} - #{car.transmission}" %></p>
              <p><%= car.address %></p>
            </div>
            <h2 class="card-place-pricing"><%= "$#{car.price_per_day}/day" %></h2>
        </div>
      </div>
      </div>
      <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
